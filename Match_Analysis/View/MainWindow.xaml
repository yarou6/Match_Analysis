<Window x:Class="Match_Analysis.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match_Analysis.View"
        mc:Ignorable="d"
        Height="400" Width="800">
    <Grid>
        
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="50*"/>
            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="7*"/>
            <RowDefinition Height="98*"/>

        </Grid.RowDefinitions>

        <Label Content="Лист Команд" Grid.Column="0" Grid.Row="0"/>
        <Label Content="Лист Игроков" Grid.Column="1"  Grid.Row="0"/>

        <StackPanel  Grid.Column="3" Grid.RowSpan="2" Orientation="Vertical">

            <Button Content="Создать матч" Command="{Binding AddAuthor}" Width="125" Height="50" Margin="0,20,0,0"/>
            <Button Content="История матчей" Command="{Binding EditAuthor}" Width="125" Height="50"  Margin="0,20,0,0"/>
            <Button Content="Турнирная таблица" Command="{Binding RemoveAuthor}" Width="125" Height="50" Margin="0,20,0,0"/>
            <Button Content="Статистика игрока" Command="{Binding RemoveAuthor}" Width="125" Height="50" Margin="0,20,0,0"/>
            <Button Content="Турнирная статистика" Command="{Binding RemoveAuthor}" Width="125" Height="50" Margin="0,20,0,0"/>
            
        </StackPanel>


        <ListView  Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Team}" SelectedItem="{Binding SelectedTeam}">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Лист Книг" />
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название команды" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Header="Тренер" DisplayMemberBinding="{Binding Coach}"/>
                    <GridViewColumn Header="Город" DisplayMemberBinding="{Binding City}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <ListView  Grid.Column="1" Grid.Row="1" ItemsSource="{Binding Player}" SelectedItem="{Binding SelectedPlayer}">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Лист Книг" />
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FIO}"/>
                    <GridViewColumn Header="Позиция" DisplayMemberBinding="{Binding PlayerPosition}"/>
                    <GridViewColumn Header="Возвраст" DisplayMemberBinding="{Binding Age}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
