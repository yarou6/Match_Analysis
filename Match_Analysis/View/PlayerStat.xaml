<Window x:Class="Match_Analysis.View.PlayerStat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match_Analysis.View"
        xmlns:mvvm="clr-namespace:Match_Analysis.VM"
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="PlayerStat" Height="450" Width="800">
    <Window.Resources>
        <mvvm:ProsmotrPlayerStat x:Key="vm"/>
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="7*"/>
            <RowDefinition Height="98*"/>

        </Grid.RowDefinitions>

        <ListView  Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Players}" SelectedItem="{Binding SelectedPlayer}">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Лист Книг" />
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Голы" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Голевые передачи" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Название команды" DisplayMemberBinding="{Binding FirstName}"/>
                </GridView>
            </ListView.View>
        </ListView>


        <Button Width="100" HorizontalAlignment="Right" Grid.Row="0" Command="{Binding Vozvrat}"/>
        <ComboBox Width="300" HorizontalAlignment="Left" Grid.Row="0"/>

    </Grid>
</Window>
