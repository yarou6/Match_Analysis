<Window x:Class="Match_Analysis.View.DobavInfPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match_Analysis.View"
        mc:Ignorable="d"
        Title="DobavInfPlayer" Height="200" Width="350">
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>

        </Grid.RowDefinitions>


        <TextBox Text="Название команды" Grid.Row="0" Width="300" Height="20" HorizontalAlignment="Center" />
		<Label  Content="Кто забил гол" Grid.Row="1" Margin="21,0,0,0"/>
        <ComboBox Text="Кто забил" Grid.Row="1" Width="300" Height="20" VerticalAlignment="Bottom"/>
        <Label  Content="Кто отдал голевой пас" Grid.Row="2" Margin="21,0,0,0"/>
        <ComboBox Grid.Row="2" Width="300" Height="20" VerticalAlignment="Bottom"/>
        <Button Grid.Row="3" Width="300" Height="20" Content="Применить изменения"/>

    </Grid>
</Window>
