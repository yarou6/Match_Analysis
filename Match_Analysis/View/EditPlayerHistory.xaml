<Window x:Class="Match_Analysis.View.EditPlayerHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match_Analysis.View"
        xmlns:mvvm="clr-namespace:Match_Analysis.VM"
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="EditPlayerHistory" Height="265" Width="700">
    <Window.Resources>
        <mvvm:AddEditPlayerHistory x:Key="vm"/>
    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.RowSpan="4" Grid.Column="0">

            
            <TextBlock Text="В какой команде" Grid.Row="4" Margin="17,10,0,0" />
            <ComboBox  Grid.Row="4" Width="300" Height="20" VerticalAlignment="Bottom" SelectedItem="{Binding SelectedTeam}" ItemsSource="{Binding Teams}" DisplayMemberPath="Title"/>


            
            <TextBlock Text="Вход в команду" Grid.Row="4" Margin="17,10,0,0" />
            <DatePicker Grid.Row="5" Width="300" Height="25" SelectedDate="{Binding EntryDate, UpdateSourceTrigger=PropertyChanged}" DataContext="{Binding NewPlayerHistory}"/>


            
            <TextBlock Text="Выход из команды" Grid.Row="4" Margin="17,10,0,0"/>
            <DatePicker Grid.Row="6" Width="300" Height="25" SelectedDate="{Binding ReleaseDate, UpdateSourceTrigger=PropertyChanged}" DataContext="{Binding NewPlayerHistory}"/>

         </StackPanel>
        
             <Button Grid.Row="4" Width="300" Height="20" Content="Применить изменения" VerticalAlignment="Center" Margin="0,10,0,0" Command="{Binding AddTeam}"/>
             <Button Grid.Row="5" Width="300" Height="20" Content="Выход" Margin="0,0,0,0"  VerticalAlignment="Center" Command="{Binding Exit}"/>

        <ListView  Grid.Column="1" Grid.Row="0" Grid.RowSpan="8" ItemsSource="{Binding PlayerHistories}" SelectedItem="{Binding SelectedPlayerHistory}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Команда" DisplayMemberBinding="{Binding Team.Title}" Width="Auto"/>
                    <GridViewColumn Header="Вход в команду" DisplayMemberBinding="{Binding EntryDate}" Width="Auto"/>
                    <GridViewColumn Header="Выход из команды" DisplayMemberBinding="{Binding ReleaseDate}" Width="Auto"/>
                </GridView> 
            </ListView.View>
        </ListView>

    </Grid>
</Window>
