<Window x:Class="Match_Analysis.View.EditPlayerHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match_Analysis.View"
        xmlns:mvvm="clr-namespace:Match_Analysis.VM"
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="EditPlayerHistory" Height="225" Width="350">
    <Window.Resources>
        <mvvm:AddEditPlayerHistory x:Key="vm"/>
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>

        </Grid.RowDefinitions>


        <StackPanel Grid.RowSpan="4" >
            <StackPanel DataContext="{Binding NewTeam}">

                <TextBlock Text="В какой команде" Grid.Row="4" Margin="17,10,0,0" />
                <ComboBox  Grid.Row="4" Width="300" Height="20" VerticalAlignment="Bottom" SelectedItem="{Binding SelectedTeam}" ItemsSource="{Binding Teams}" DisplayMemberPath="Title"/>


                <TextBlock Text="Вход в команду" Grid.Row="4" Margin="17,10,0,0" />
                <DatePicker Grid.Row="5" Width="300" Height="25" />


                <TextBlock Text="Выход из команды" Grid.Row="4" Margin="17,10,0,0"/>
                <DatePicker Grid.Row="6" Width="300" Height="25"/>

            </StackPanel>
            <Button Grid.Row="3" Width="300" Height="20" Content="Применить изменения" Margin="0,10,0,0" Command="{Binding AddTeam}"/>
        </StackPanel>

    </Grid>
</Window>
