<Window x:Class="Match_Analysis.View.EditPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match_Analysis.View"
        mc:Ignorable="d"
        Title="EditPlayer" Height="400" Width="350">
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>

        </Grid.RowDefinitions>


        <TextBox Text="Фамилия" Grid.Row="0" Width="300" Height="20" HorizontalAlignment="Center" />
        <TextBox Text="Имя" Grid.Row="1" Width="300" Height="20" HorizontalAlignment="Center" />
        <TextBox Text="Отчество" Grid.Row="2" Width="300" Height="20" HorizontalAlignment="Center" />
        <ComboBox Text="Позиция игрока" Grid.Row="3" Width="300" Height="20"/>
        <ComboBox Text="В какой команде выступает" Grid.Row="4" Width="300" Height="20"/>
        <DatePicker Grid.Row="5" Width="300" Height="25"/>
        <DatePicker Grid.Row="6" Width="300" Height="25"/>
        <Button Grid.Row="7" Width="300" Height="20" Content="Применить изменения"/>

    </Grid>
</Window>
