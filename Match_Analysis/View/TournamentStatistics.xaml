<Window x:Class="Match_Analysis.View.TournamentStatistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match_Analysis.View"
        xmlns:mvvm="clr-namespace:Match_Analysis.VM"
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="TournamentStatistics" Height="450" Width="800">
    <Window.Resources>
        <mvvm:ProsmotrTournStat x:Key="vm"/>
    </Window.Resources>
    <Grid>


        <Grid.RowDefinitions>

            <RowDefinition Height="7*"/>
            <RowDefinition Height="98*"/>

        </Grid.RowDefinitions>

        <ListView Grid.Row="1" ItemsSource="{Binding PlayersStats}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FIO}"/>
                    <GridViewColumn Header="Голы" DisplayMemberBinding="{Binding Goals}"/>
                    <GridViewColumn Header="Голевые передачи" DisplayMemberBinding="{Binding Assists}"/>
                    <GridViewColumn Header="Название команды" DisplayMemberBinding="{Binding TeamTitle}"/>
                </GridView>
            </ListView.View>
        </ListView>


        <Button Width="100" HorizontalAlignment="Right" Command="{Binding Vozvrat}"/>

    </Grid>
</Window>
