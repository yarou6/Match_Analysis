<Window x:Class="Match_Analysis.View.TournamentTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match_Analysis.View"
        xmlns:mvvm="clr-namespace:Match_Analysis.VM"
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="TournamentTable" Height="450" Width="800">
    <Window.Resources>
        <mvvm:ProsmotrTournTable x:Key="vm"/>
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="7*"/>
            <RowDefinition Height="98*"/>

        </Grid.RowDefinitions>

        <ListView  Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Player}" SelectedItem="{Binding SelectedPlayer}">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Лист Книг" />
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название команды" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Сыграно матчей" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Победы" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Ничьи" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Поражения" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Очки" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Забито голов" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Пропущено голов" DisplayMemberBinding="{Binding FirstName}"/>
                </GridView>
            </ListView.View>
        </ListView>


        <Button Width="100" HorizontalAlignment="Right" Command="{Binding Vozvrat}" />
        <Image Margin="720,-8,20,397" Source="/png-transparent-green-arrow-computer-icons-left-arrow-angle-text-rectangle-thumbnail (1).png" Stretch="Fill" Grid.RowSpan="2"/>

    </Grid>
</Window>
