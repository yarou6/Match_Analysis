<Window x:Class="Match_Analysis.View.TournamentTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match_Analysis.View"
        xmlns:mvvm="clr-namespace:Match_Analysis.VM"
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="TournamentTable" Height="450" Width="800" MaxHeight="450" MaxWidth="800" MinHeight="450" MinWidth="800">
    <Window.Resources>
        <mvvm:ProsmotrTournTable x:Key="vm"/>
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListView  Grid.Column="0" Grid.Row="1" ItemsSource="{Binding}">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Лист Книг" />
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название команды" DisplayMemberBinding="{Binding }"/>
                    <GridViewColumn Header="Сыграно матчей" DisplayMemberBinding="{Binding }"/>
                    <GridViewColumn Header="Победы" DisplayMemberBinding="{Binding }"/>
                    <GridViewColumn Header="Ничьи" DisplayMemberBinding="{Binding }"/>
                    <GridViewColumn Header="Поражения" DisplayMemberBinding="{Binding }"/>
                    <GridViewColumn Header="Очки" DisplayMemberBinding="{Binding }"/>
                    <GridViewColumn Header="Забито голов" DisplayMemberBinding="{Binding }"/>
                    <GridViewColumn Header="Пропущено голов" DisplayMemberBinding="{Binding }"/>
                </GridView>
            </ListView.View>
        </ListView>


        <Button Grid.Row="0" Width="100" HorizontalAlignment="Right" Margin="10"
        Content="Назад" Command="{Binding Vozvrat}"/>

    </Grid>
</Window>
